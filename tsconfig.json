{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "lib": ["es6", "es2021", "dom"],
    "types": ["node"],
    "sourceMap": true,
    "outDir": "bin",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "importHelpers": true
  },
  "exclude": ["node_modules"]
}
